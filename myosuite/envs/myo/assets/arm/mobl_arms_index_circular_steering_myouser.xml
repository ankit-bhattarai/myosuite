<mujoco model="MoBL Arms Index model for 2D touchscreen steering">
    <include file="../../../../simhive/uitb_sim/assets/mobl_arms_index_assets.xml"/>
    <compiler meshdir='../../../../simhive/uitb_sim/' texturedir='../../../../simhive/uitb_sim/'/>

    <worldbody>
        <!-- <geom name="body" type="mesh" mesh="human_body" euler="0 0 3.14" contype="0" conaffinity="0"/> -->
        <body name="full_body" pos="0 0 1">
          <include file="../../../../simhive/uitb_sim/assets/mobl_arms_index_body.xml"/>
        </body>

        <light name="scene_light" directional="true" castshadow="false" cutoff="4" exponent="20" diffuse="1 1 1" specular="0 0 0" pos="0.5 0.5 3.0"/>
        <body name="screen" pos="0.6 -0.27 0.993">
          <geom name="screen" size="0.01 0.5 0.4" type="box" rgba="1 1 1 1" contype="1" conaffinity="1" margin="0.001"/>
          <site name="screen" type="box" size="0.01 0.5 0.4"/>
          <site name="top_line" type="cylinder" size="0.3 0.001" pos="-0.01 0 0" euler="0 1.57 0" rgba="0 0 0 1"/>
          <site name="bottom_line" type="cylinder" size="0.1 0.001" pos="-0.0101 0 0" euler="0 1.57 0" rgba="1 1 1 1"/>
          <site name="start_line" type="box" size="0.001 0.005 0.1" pos="-0.0105 0 0.25" rgba="0 1 0 1"/>
          <site name="end_line" type="box" size="0.001 0.005 0.1" pos="-0.0105 0 -0.25" rgba="0 1 0 1"/>
        </body>

        <body name="fixed-eye" pos="0 0 1.2" quat="0.583833 0.399104 -0.399421 -0.583368">
          <geom name="fixed-eye" quat="0.7106 0.25537 0.616985 0.221728" type="mesh" rgba="1 1 1 1" mesh="eye"/>
          <camera name="fixed-eye" pos="0 0 0" fovy="120"/>
        </body>
    </worldbody>

    <!-- Adding sensor for the steering task -->
    <!-- <sensor>
      <touch name="screen_touch" site="screen"/>
    </sensor> -->

</mujoco>
